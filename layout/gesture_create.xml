    <CheckBox android:id="@id/gestures_run_in_background" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gestures_run_in_background" />
    <TextView android:textAppearance="?android:textAppearanceSmall" android:id="@id/gestures_draw_label" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/gestures_draw_label" />
