<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.powerwidget.VolumePanel
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/volume_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/panel_layout"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/toggle_slider_background"
        >

        <LinearLayout
            android:id="@+id/media_volume_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toggles_slider_panel_height"
            android:orientation="horizontal"
            android:visibility="gone"
            >
    
            <ImageView
                android:id="@+id/volume_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

            <SeekBar
                android:id="@+id/media_volume_seekbar"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/volume_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

         </LinearLayout>

        <LinearLayout
            android:id="@+id/ringer_volume_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toggles_slider_panel_height"
            android:orientation="horizontal"
            android:visibility="gone"
            >
    
            <ImageView
                android:id="@+id/volume_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

            <SeekBar
                android:id="@+id/ringer_volume_seekbar"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/volume_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

         </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_volume_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toggles_slider_panel_height"
            android:orientation="horizontal"
            android:visibility="gone"
            >
    
            <ImageView
                android:id="@+id/volume_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

            <SeekBar
                android:id="@+id/notification_volume_seekbar"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/volume_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

         </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_volume_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toggles_slider_panel_height"
            android:orientation="horizontal"
            android:visibility="gone"
            >
    
            <ImageView
                android:id="@+id/volume_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

            <SeekBar
                android:id="@+id/alarm_volume_seekbar"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/volume_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/expanded_toggle"
            android:layout_width="20dip"
            android:layout_height="16dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_extended_toggles_expand"
            android:scaleType="fitXY"
            />

     </LinearLayout>

</com.android.systemui.statusbar.powerwidget.VolumePanel>
