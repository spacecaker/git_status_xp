    </TableRow>
    <TableRow style="\@style/InformationItemTabStyle">
        <TextView android:text="@string/device_version" style="\@style/InformationItemTitleStyle" />
        <TextView android:id="@id/device_version" style="\@style/InformationTextStyle" />
    </TableRow>
    <TableRow style="\@style/InformationItemTabStyle">
