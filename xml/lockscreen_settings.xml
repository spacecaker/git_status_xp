<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/app_name"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/custom_app_starter">
        <CheckBoxPreference android:title="@string/custom_app_starter" android:key="lockscreen_custom_app_toggle" android:summary="@string/custom_app_starter_summary" android:defaultValue="false" />
        <Preference android:title="@string/custom_app_activity" android:key="lockscreen_custom_app_activity" android:dependency="lockscreen_custom_app_toggle" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/lock_othercat">
        <CheckBoxPreference android:title="@string/custom_icon_style" android:key="lockscreen_custom_icon_style" android:summary="@string/custom_icon_style_summary" android:dependency="lockscreen_custom_app_toggle" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/drag_download_unlock" android:key="lockscreen_rotary_unlock_down" android:summary="@string/drag_downlaod_unlock_summary" android:dependency="lockscreen_custom_app_toggle" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/disable_unlock_slider_title" android:key="lockscreen_gestures_disable_unlock" android:summary="@string/disable_unlock_slider_summary" android:defaultValue="false" />
        <CheckBoxPreference android:title="@string/rotary_hide_arrows" android:key="lockscreen_rotary_hide_arrows" android:summary="@string/rotary_hide_arrows_summary" android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>